{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["google"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "object-curly-spacing": "off",
    "prefer-const": "off",
    "no-invalid-this": "off",
    "operator-linebreak": "off",
    "max-len": ["warn", { "code": 700 }],
    "require-jsdoc": 0,
    "indent": "off",
    "comma-dangle": "off"
  }
}
